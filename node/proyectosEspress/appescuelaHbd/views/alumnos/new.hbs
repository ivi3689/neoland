<h1>Datos del alumno para incorporar</h1>

<form action="./create", method="post">
    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" type="text", placeholder="Nombre", name="nombre">
    </div>
    <div class="form-group">
        <label>Apellidos</label>
        <input class="form-control" type="text", placeholder="Apellidos" name="apellido">
    </div>
    <div class="form-group">
        <label>Fecha de Nacimiento</label>
        <input class="form-control" type="text" placeholder="Fecha de Nacimiento" name="nacimiento">
    </div>
    <div class="form-group">
        <label>Promedio</label>
        <input class="form-control" type="text" placeholder="Promedio" name="promedio">
    </div>
    <div class="form-group">
        <label>Sexo</label>
        <input class="form-control" type="text" placeholder="Introducir genero" name="sexo">
    </div>
    <div class="form-group">
        <label>Escuela</label>
        <input class="form-control" type="text" placeholder="Ciudad de la escuela" name="fk_idEscuela">
    </div>
    <button class="btn btn-primary" type="submit">Registrar</button>
</form>